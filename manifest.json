{
    "name": "Spotify Web Extension",
    "description": "Control the Spotify Web player from any tab",
    "browser_action": {
	"default_icon": {
	    "19": "icons/spot-19.png",
	    "38": "icons/spot-38.png"
	},
	"default_popup": "popup.html",
	"default_title": "Spotify Web Player"
    },
    "icons": {
	"128": "icons/spot-128.png",
	"48": "icons/spot-48.png",
	"16": "icons/spot-16.png"
    },
    "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",
    "options_page": "options.html",
    "web_accessible_resources": [ "js/common.js", "js/play.spotify.com.inject.js", "js/all.inject.js" ],
    "permissions": ["*://play.spotify.com/*", "notifications","contextMenus"],
    "optional_permissions": ["<all_urls>", "*://www.youtube.com/*"],
    "manifest_version": 2,
    "background": {
	"persistent": true,
	"scripts": [ "js/common.js", "js/ga.js", "js/background.content.js", "js/background.extension.js", "js/api.js", "js/background.js" ]
    },
    "version": "0.2.1"
}
